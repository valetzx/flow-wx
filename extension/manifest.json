{
  "manifest_version": 3,
  "name": "Flow WX Extractor",
  "description": "Generate /wx/api data from local articles",
  "version": "1.0",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["*://*/*"],
  "side_panel": {
    "default_path": "popup.html"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html"
  }
}
