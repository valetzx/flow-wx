{
  "version": 2,
  "rewrites": [
    { "source": "/oauth/fallback", "destination": "/api/oauth/fallback" },
    { "source": "/a/(.*)", "destination": "https://wx-api-deno.onmicrosoft.cn/a/$1" },
    { "source": "/ideas", "destination": "/ideas.html" },
    { "source": "/game21", "destination": "/game21.html" },
    { "source": "/add", "destination": "/add.html" },
    { "source": "/api/(?!cnb$).*", "destination": "https://pigeonpig.github.io/api/$1" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST" },
        { "key": "Cache-Control", "value": "public, max-age=36000" }
      ]
    },
    {
      "source": "/a/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST" },
        { "key": "Cache-Control", "value": "public, max-age=360000" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}